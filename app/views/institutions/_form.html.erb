<%= nested_form_for @institution do |f| %>
  <%= f.label :name %>
  <%= f.text_field(:name) %><br />
  <%= f.label :nickname %>
  <%= f.text_field(:nickname) %><br />
  <h3> Achievement Type </h3>
  <p><%= f.link_to_add "Add a Achievement Type", :achievementtypes %></p>
  <!--  - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
  <div class="accordion span12 pull-left" id="accordian">
    <% k = 0 %>                                                 
    <%= f.fields_for :achievementtypes do |type| %>
      <div class="accordion-group">
        <div class="accordion-heading">
          <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordian" href="#collapse<%= k %>">
            <%= type.label "Achievement Type" %><%= type.text_field(:achievementtype) %>
          </a>
        </div>
        <div id="collapse<%= k %>"  class="accordion-body collapse">
          <div class="accordion-inner" >
            <%= type.link_to_remove "Remove this Achievement Type" %>
