                                                            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordian<%= k %><%= l %><%= m %><%= n %>1<%= o %>1" href="#collapse<%= k %><%= l %><%= m %><%= n %>1<%= o %>1<%= p %>">
                                                              <%= course.label "Department" %><%= course.text_field(:department) %><%= course.label "Course Number" %><%= course.text_field(:num) %>
