                                          <%= specialty.label "Notes" %><%= specialty.text_area :notes, :size => "30x10" %>
                                          <%= specialty.label "Faculty Advisor" %><%= specialty.text_field :advisor %>
                                          <%= specialty.label "Link" %><%= specialty.text_field :linkhome %>
                                        </a>
                                      </div>
                                      <div id="collapse<%= k %><%= l %><%= m %><%= n %>"  class="accordion-body collapse">
                                        <div class="accordion-inner" >
                                          <%= specialty.link_to_remove "Remove this Specialty" %>
