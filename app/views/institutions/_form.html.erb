                        <% m = 0 %>                                                 
                        <%= college.fields_for :achievementnames do |name| %>
                          <div class="accordion-group">
                            <div class="accordion-heading">
                              <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordian<%= k %><%= l %>" href="#collapse<%= k %><%= l %><%= m %>">
                                <%= name.label "Achievement Name" %><%= name.text_field(:achievementname) %>
                              </a>
                            </div>
