<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
    </aside>
  </div>  
<% else %>
  <div class="center hero-unit">

    <h1>iTrack: <h4>Prepare, Guide, Inspire</h4></h1>

    <h3>Here you will find the shoulders on which to stand so that you may be successful in your journey through college, grad school, and into the real world.</h3>

    <%= link_to "Sign up now!", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>
<% end %> 
