.nested-fields
  = f.inputs do
    .accordio-group
      .accordion-heading
        %a.accordion-toggle{"data-parent" => "#transferaccordion", "data-toggle" => "collapse", :href => "#transfercollapse"}
          %h3 Transfer Courses
          = link_to_remove_association "remove transfer courses", f, :class => "btn"
          #transfer
            .accordion-body.collapse{:id => "transfercollapse"}
              .accordion-inner
                #transferaccordian.accordion
                  -@inst = "Transfer"
                  = f.semantic_fields_for :usercourses do |course|
                    = render 'usercourse_fields', :f => course, :@inst => @inst
                  = link_to_add_association "add course", f, :usercourses, :class => "btn"
                  %hr


